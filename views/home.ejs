<html>
  <head>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
     <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- Making Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid"> 
        <a class="navbar-brand" href="/">MovieRater</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button> 
        <div class="collapse navbar-collapse" id="navbarNav">
          <form class="form-inline" action="/searchhandler" method="post">
            <input class="form-control-sm" type="search" name="search" id="search" placeholder="Search Review" aria-label="Search" required>
            <button class="btn btn-sm btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>  
          <ul class="navbar-nav me-auto mb-2 mb-sm-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/review">Review</a>
            </li>
          </ul>       
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="movieReviews">
<!-- loop through every review, then loop through all the users in order to get the user info of the reviewer. -->
      <% reviews.forEach(function(review){ %>
          <div class="reviewContainer">
            <p class="userAndDate">Posted by <%= review.ReviewerName %> (<%= review.Date %>):</p>
            <h2 class="reviewItem"><%= review.MovieName %></h2>
<!--          set the rating attribute so our js file can access that info to change the star images -->
            <div class="starRating reviewItem" id="starRating" rating=<%= review.Rating %>>
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="1">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="2">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="3">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="4">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="5">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="6">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="7">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="8">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="9">
              <img class="star" src="https://cdn.glitch.global/faca5e19-8d78-45d8-9876-06ca89839f61/empy-star.png?1739544362978" alt="star" data-value="10">
            </div>
            <div class="reviewItem textualReview">
              <p>
                <%= review.TextualReview %>
              </p>
            </div>
          </div>
      <% }); %>
    </div>
  </body>
  <footer>
    <script src="/js/home.js"></script>
  </footer>
</html>