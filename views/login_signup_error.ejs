<html>
  <head>
    <link rel="stylesheet" href="/css/login_signup.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">

    <!-- bootstrap stuff -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- the navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">MovieRater</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-sm-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/review">Review</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/login">Login</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- displaying differnet forms and error messages depending on what request the user made -->
    <% if(type == "login"){ %>
      <div class="formBox">
        <form action="/userhandler" method="post">
          <div class="inputField">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" value=<%= user_info.username %> required>
          </div>

          <div class="inputField">
            <label for="password">Password:</label>
            <input type="text" id="password" name="password" value=<%= user_info.password %> required>
          </div>
          
          <p class="errorMessage">Wrong username and/or password</p>

          <div class="formFinalButton">
            <input type="submit" value="Login">
          </div>
        </form>
        <div class="SignupButton">
          <a href="/signup">
            <button>Create an account</button>
          </a>
        </div>
      </div>
    <% }else if(type == "signup"){ %>
      <div class="formBox">
        <form action="/createuser" method="post">
          <div class="inputField">
            <label for="username">
              Username:
            </label>
            <input type="text" id="username" name="username" value=<%= user_info.username %> required>
          </div>

          <div class="inputField">
            <label for="password">
              Password:
            </label>
            <input type="text" id="password" name="password" value=<%= user_info.password %> required>
          </div>
          
          <p class="errorMessage">Username already taken</p>

          <div class="formFinalButton">
            <input type="submit" value="Sign Up">
          </div>
        </form>      
      </div>
    <% }else if(type == "review"){ %>
      <div class="formBox">
        <form action="/userhandler" method="post">
          <div class="inputField">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
          </div>

          <div class="inputField">
            <label for="password">Password:</label>
            <input type="text" id="password" name="password" required>
          </div>
          
          <p class="errorMessage">You need to login before reviewing</p>

          <div class="formFinalButton">
            <input type="submit" value="Login">
          </div>
        </form>
        <div class="SignupButton">
          <a href="/signup">
            <button>Create an account</button>
          </a>
        </div>
      </div>
    <% } %>
  </body>
  <footer>
    <script src="js/login_signup.js"></script>
  </footer>
</html>
